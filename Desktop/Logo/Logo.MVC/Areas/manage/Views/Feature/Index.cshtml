@using Logo.Core.Models
@model List<Feature>
@{
    int counter = 0;
}
<div class="container-fluid">
    <div>
        <h1>Create</h1>
        <a asp-action="create" asp-controller="feature" class="btn btn-primary" >
            Create
        </a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Icon</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                counter++;
                <tr>


                    <th scope="row">@counter</th>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.IconUrl)</td>
                    <td>
                        <a asp-action="upate" asp-controller="feature" asp-route-id="@item.Id"> Update</a>
                        <button asp-action="delete" asp-controller="feature" asp-route-id="@item.Id">Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>